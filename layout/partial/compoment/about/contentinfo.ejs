<% const contentinfo = site.data.about.contentinfo; %>
<div class="author-content">
	<div class="author-content-item myInfoAndSayHello">
		<div class="title1">你好，很高兴认识你👋</div>
		<div class="title2">我是 <span class="inline-word"><%= contentinfo.name %></span></div>
		<div class="title1">目前是一名 <%= contentinfo.title %></div>
	</div>
	<div class="aboutsiteTips author-content-item">
		<div class="author-content-item-tips">探索</div>
		<h2>源于</h2>
		<div class="scroll-prompts-container">
			<span>热爱而去</span>
			<div class="mask scroll-prompts--top swiper-container">
				<div class="swiper-wrapper">
					<% (contentinfo.prompts.top || []).forEach(tip => { %>
						<div class="swiper-slide scroll-prompts-text"><%= tip %></div>
					<% }); %>
				</div>
			</div>
		</div>

		<div class="mask scroll-prompts--bottom swiper-container">
			<div class="swiper-wrapper">
				<% (contentinfo.prompts.bottom || []).forEach(tip => { %>
					<div class="swiper-slide scroll-prompts-text"><%= tip %></div>
				<% }); %>
			</div>
		</div>
	</div>
</div>
<script>
	function initScrollPrompts () {
		if (document.readyState !== 'complete') return
		if (Swiper) {
			new Swiper('.mask.scroll-prompts--top', {
				direction: 'vertical',
				loop: true,
				autoplay: {
					delay: 2000,
					pauseOnMouseEnter: false
				}
			});
			setTimeout(function () {
				new Swiper('.mask.scroll-prompts--bottom', {
					direction: 'vertical',
					loop: true,
					autoplay: {
						delay: 2000,
						pauseOnMouseEnter: false
					}
				});
			}, 300)
		}
	}
	window.addEventListener('readystatechange', initScrollPrompts);
	initScrollPrompts()
</script>
