<div class="share-link mobile">
    <div class="share-qrcode">
        <div class="share-button" title="使用手机访问这篇文章">
            <i class="fas fa-qrcode"></i>
        </div>
        <div class="share-main">
            <div class="share-main-all">
                <div id="qrcode" title="<%= page.permalink %>">
                </div>
                <div class="reward-dec">使用手机访问这篇文章</div>
            </div>
        </div>
        <script type="text/javascript">
            function initContentQrcode() {
                if (document.readyState !== 'complete') return
                if (QRCode) {
                    new QRCode(document.getElementById("qrcode"), "<%= page.permalink %>");
                }
            }
            document.addEventListener('readystatechange', initContentQrcode);
            initContentQrcode()
        </script>
    </div>
</div>
